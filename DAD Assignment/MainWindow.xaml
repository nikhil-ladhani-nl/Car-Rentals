<Window x:Class="DAD_Assignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAD_Assignment"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="816">
    <StackPanel>
        <Menu Name="mainMenu" FontSize="20" Background="BlanchedAlmond" Height="58">
            <MenuItem Name="CREmployee" Header="Profile Management">
                <MenuItem Header="Add New Employee" />
                <MenuItem Header="Display Customer"/>
                <MenuItem Header="Manage Profile">
                    <MenuItem Header="Customer"/>
                    <MenuItem Header="Employee"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Name="CRStock" Header="Stock Management">
                <MenuItem Header="Manage Cars">
                    <MenuItem Name="SACItem"
                        Header="Show All Cars"/>
                    <MenuItem Name="ACItem" Header="Add Car"/>
                    <MenuItem  Header="Search Car"/>
                    <MenuItem Name="UPCItem" Header="Update Car Details"/>
                </MenuItem>
            </MenuItem >
        </Menu>
    </StackPanel>
</Window>

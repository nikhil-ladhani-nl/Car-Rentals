<Window x:Class="DAD_Assignment.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAD_Assignment"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    <Grid>
        <Label Content="NBA Cars Sales Limited" FontSize="40" HorizontalAlignment="Left" Margin="170,69,0,0" VerticalAlignment="Top"/>
        <Label Content="Username:" FontSize="15" HorizontalAlignment="Left" Margin="170,163,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" FontSize="15" HorizontalAlignment="Left" Margin="170,211,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" FontSize="15" Height="25" Margin="310,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Login" FontSize="15" HorizontalAlignment="Left" Margin="310,267,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        <PasswordBox x:Name="passwordTextBox" FontSize="15" HorizontalAlignment="Left" Width="120" Height="25" Margin="310,211,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>

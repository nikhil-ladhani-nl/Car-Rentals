<UserControl x:Class="DAD_Assignment.DisplayCarModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DAD_Assignment"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Beige">
        <ComboBox x:Name="carModelCombo" ItemsSource="{Binding}" DisplayMemberPath="Model" SelectionChanged="ComboBox_SelectionChanged" SelectedValuePath="ModelID" HorizontalAlignment="Left" Margin="177,36,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Select Car Model:" HorizontalAlignment="Left" Margin="70,32,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="carModelGrid" HorizontalAlignment="Left" Height="369" Margin="10,71,0,0" VerticalAlignment="Top" Width="780"/>

    </Grid>
</UserControl>
